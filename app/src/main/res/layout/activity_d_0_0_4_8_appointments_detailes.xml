<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFCF9"
    android:orientation="vertical"
    tools:context=".d_0_0_4_8_Appointments_detailes">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/navigation_bar_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apnmnt_dtls_page_back_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="-42dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/back_arraw" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Appointment Details"
                    android:textColor="#027C64"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"></LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#FEFFEE"
        android:orientation="vertical"
        android:padding="20dp"

        >

        <LinearLayout
            android:id="@+id/apnmnt_dtls_page_client_id_lout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/apnmnt_dtls_page_client_profile_img_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_img"
                app:civ_border_color="#E6E6E6"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/apnmnt_dtls_page_client_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Solayman khan"
                android:textColor="#027C64"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/appointment_client_txtvw_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text=" ( Client )"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/apnmnt_dtls_page_appointment_timetaken_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:text="2-5-2022 |  02 : 30 pm"
            android:textSize="14dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#027C64" />

        <LinearLayout
            android:id="@+id/apnmnt_dtls_page_professional_lout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/apnmnt_dtls_page_pro_profile_img_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_img"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apnmnt_dtls_page_pro_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Nakib "
                    android:textColor="#027C64"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/appointment_layout_profession_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/apnmnt_dtls_page_profession_imgvw_id"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/lawyer_icon" />

                    <TextView
                        android:id="@+id/apnmnt_dtls_page_profession_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FF3A00"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/apnmnt_dtls_page_pro_ratingtxt_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="#FABD05"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/apnmnt_dtls_page_pro_ratingbar_id"
                        style="@android:attr/ratingBarStyleSmall"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="-8dp"
                        android:isIndicator="true"
                        android:max="5"
                        android:progressTint="#FFD700"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:secondaryProgressTint="@color/white"
                        android:transformPivotX="3dp"
                        android:transformPivotY="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/apnmnt_dtls_page_clients_phone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#027C64"
            android:text="Solaymans Phone : "
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/apnmnt_dtls_page_pros_phone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#027C64"
            android:text="Nakibs Phone : "
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#027C64"
            android:text="Appointment  category : Online"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/apnmnt_dtls_page_willbe_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#027C64"
            android:text="Appointment will be : "
            android:textSize="15dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#027C64"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:text="Time remaining : "
            android:textSize="14dp"
            />

            <TextView
                android:id="@+id/apnmnt_dtls_page_time_remaining_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="30 days"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>