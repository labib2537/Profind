<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/navigation_bar_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/post_personal_layout_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_profile_imgvw_id"
                    android:background="@drawable/ripple_effect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:src="@drawable/profile_img"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_profile_nametxtvw_id"
                    android:background="@drawable/ripple_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#027C64"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post_profile_profession_imgvw_id"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/background_img" />

                    <TextView
                        android:id="@+id/post_profile_professiontxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FF3A00"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_profile_ratingtxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="#FABD05"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/post_profile_ratingbar_id"
                        style="@android:attr/ratingBarStyleSmall"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="-8dp"
                        android:isIndicator="true"
                        android:max="5"
                        android:progressTint="#FFD700"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:secondaryProgressTint="@color/white"
                        android:transformPivotX="3dp"
                        android:transformPivotY="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/post_time_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="#9FABA9"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post_placeimg_id"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_earth_icon" />

                    <TextView
                        android:id="@+id/post_placetxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#9FABA9"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-45dp"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/settings_icon" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_setting_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/custom_button_1_2"

                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/post_group_layout_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_page_banner_image_id"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:src="@drawable/background_img"
                app:civ_border_color="#E6E6E6"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigation_bar_6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_page_group_name_id"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#027C64"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/navigation_bar_6"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/group_page_user_image_id"
                        android:background="@drawable/ripple_effect"
                        android:clickable="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile_img"
                        app:civ_border_color="#E6E6E6"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/group_page_user_name_id"
                        android:background="@drawable/ripple_effect"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:textColor="#027C64"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/group_post_time_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#9FABA9"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/group_post_placeimg_id"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_earth_icon" />

                    <TextView
                        android:id="@+id/group_post_placetxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#9FABA9"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-45dp"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/settings_icon" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/group_setting_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/custom_button_1_2"

                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/post_page_description_lout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_bar_8">

        <TextView
            android:id="@+id/post_descriptiontxtvw_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/antic"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    //Photos and videos

    <LinearLayout
        android:id="@+id/post_img_vdo_lout_1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/post_img_vdo_lout_1_1_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/post_img_1_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/post_vdo_1_id"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_img_vdo_lout_1_2_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/post_img_2_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/post_vdo_2_id"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_img_vdo_lout_2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/post_img_vdo_lout_2_1_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/post_img_3_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/post_vdo_3_id"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_img_vdo_lout_2_2_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_img_4_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/post_vdo_4_id"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/post_extra_img_vdo_txtvw_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#70000000"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    //Reacts and comments part

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_reacttxtvw_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9FABA9"
                android:textSize="12dp"
                android:layout_marginLeft="-3dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical"

            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_commenttxtvw_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30K Comments"
                android:textColor="#9FABA9"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="#00C49E" />

    //React+Comment

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_react_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_1"
                android:drawableStart="@drawable/ic_love_not_given_icon"
                android:padding="10dp"
                android:text="Like"
                android:textAllCaps="false"
                android:textColor="#9FABA9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_comment_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button_1"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="Comment"
                android:textAllCaps="false"
                android:textColor="#9FABA9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

