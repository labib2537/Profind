<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFCF9"
    android:orientation="vertical"
    tools:context=".e_1_13_Group_post_anything">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/navigation_bar_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/group_page_back_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="-42dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/back_arraw" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Create group post"
                    android:textColor="#027C64"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"></LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/navigation_bar_6"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_page_banner_image_id"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/background_img"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/navigation_bar_6"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/group_page_group_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:textColor="#027C64"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/navigation_bar_6"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/group_page_user_image_id"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/profile_img"
                            app:civ_border_color="#E6E6E6"
                            app:civ_border_width="1dp" />

                        <TextView
                            android:id="@+id/group_page_user_name_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:textColor="#027C64"
                            android:textSize="16dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_page_edttext_lout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigation_bar_8">

                <EditText
                    android:id="@+id/group_page_edttext_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/navigation_bar_8"
                    android:fontFamily="@font/antic"
                    android:hint="Write ...."
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_page_cancel_img_vdo_lout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/group_page_cancel_img_vdo_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/close_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_page_img_vdo_1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/group_page_img_vdo_1_1_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/group_page_img_1_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop" />

                    <VideoView
                        android:id="@+id/group_page_vdo_1_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_page_img_vdo_1_2_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/group_page_img_2_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop" />

                    <VideoView
                        android:id="@+id/group_page_vdo_2_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_page_img_vdo_2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/group_page_img_vdo_2_1_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/group_page_img_3_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop" />

                    <VideoView
                        android:id="@+id/group_page_vdo_3_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_page_img_vdo_2_2_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/group_page_img_4_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop" />

                    <VideoView
                        android:id="@+id/group_page_vdo_4_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/group_page_extra_img_vdo_txt_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#70000000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/navigation_bar_7"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:weightSum="4">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/gallery_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="img/video" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/group_page_gallery_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="-50dp"
                        android:background="@drawable/custom_button_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/location_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="location" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/group_page_location_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="-50dp"
                        android:background="@drawable/custom_button_1" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="-20dp"
                android:gravity="center|end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/group_page_post_btn_id"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_button_9"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:textColor="#027C64"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>