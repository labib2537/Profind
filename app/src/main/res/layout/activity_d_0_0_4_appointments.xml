<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFCF9"
    android:orientation="vertical"
    tools:context=".d_0_0_4_Appointments">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/navigation_bar_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appointments_page_back_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="-42dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/back_arraw" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:text="Appointments"
                    android:textColor="#027C64"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"></LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:columnCount="1"
        >
        <LinearLayout
            android:id="@+id/appointment_page_make_schedule_layout_id"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:background="@drawable/custom_button_7"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_access_time"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Schedule"
                android:layout_gravity="center"
                android:textColor="#027C64"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/appointment_page_available_time_layout_id"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:background="@drawable/custom_button_7"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_calendar_today"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check available times"
                android:layout_gravity="center"
                android:textColor="#027C64"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/appointment_page_as_a_pro_layout_id"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:background="@drawable/custom_button_7"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_professional"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="Appointments as a Professional"
                android:textColor="#027C64"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/appointment_page_as_a_client_layout_id"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:background="@drawable/custom_button_7"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_client"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments as a client"
                android:layout_gravity="center"
                android:textColor="#027C64"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/appointment_page_prev_appointment_layout_id"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:background="@drawable/custom_button_7"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_previous"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Apointments"
                android:layout_gravity="center"
                android:textColor="#027C64"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </GridLayout>

</LinearLayout>