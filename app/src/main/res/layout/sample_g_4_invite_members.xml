<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/navigation_bar_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/invite_user_id_layout_id"
        android:background="@drawable/ripple_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/invite_user_id_imgvw_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/background_img"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invite_user_id_name_txtvw_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#027C64"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/invite_user_id_profession_imgvw_id"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/lawyer_icon" />

                    <TextView
                        android:id="@+id/invite_user_id_professiontxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FF3A00"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/invite_user_id_ratingtxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="#FABD05"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/invite_user_id_ratingbar_id"
                        style="@android:attr/ratingBarStyleSmall"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="-8dp"
                        android:isIndicator="true"
                        android:max="5"
                        android:progressTint="#FFD700"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:secondaryProgressTint="@color/white"
                        android:transformPivotX="3dp"
                        android:transformPivotY="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/invite_user_id_placeimg_id"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_earth_icon" />

                    <TextView
                        android:id="@+id/invite_user_id_placetxtvw_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#9FABA9"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-100dp"
            android:gravity="end|center"
            android:padding="5dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/invite_user_id_invite_btn_id"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:textColor="#027C64"
                android:padding="5dp"
                android:text="Invite"
                android:background="@drawable/custom_button_11"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>