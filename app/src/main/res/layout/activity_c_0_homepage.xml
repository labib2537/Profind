<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFCF9"
    android:orientation="vertical"
    tools:context=".c_0_HomePage">

    <View
        android:id="@+id/homepage_toolbar_background_id"
        android:layout_width="match_parent"
        android:layout_height="56.5dp"
        android:background="#FFBBFFF0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/homepage_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="-56.5dp"
        android:background="@drawable/navigation_bar_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/name_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/homepage_profile_img_btn_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="-35dp"
                    android:background="@drawable/custom_button_1_2" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/homepage_profile_img_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/profile_img"
                    app:civ_border_color="#E6E6E6"
                    app:civ_border_width="1dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/homepage_search_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="-33dp"
                    android:background="@drawable/search_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/homepage_massage_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="-31dp"
                    android:background="@drawable/massage_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/homepage_menu_btn_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_button_1_2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="-33dp"
                    android:background="@drawable/menu_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="#CEFFF4" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/homepage_tab_layout_1_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50.5dp"
        android:background="@drawable/navigation_bar_3"
        app:tabIconTint="@null"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="#0FB392"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homepage_tabitem_home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home_icon" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homepage_tabitem_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/group_icon"

            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homepage_tabitem_notification_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/notification_icon"

            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homepage_tabitem_post_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_post_icon"

            />
    </com.google.android.material.tabs.TabLayout>

    <HorizontalScrollView
        android:id="@+id/homepage_profession_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/navigation_bar_4"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/doctor_btn_id"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="2dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/doctor_icon"
                android:background="@drawable/custom_button_5"
                android:text="Doctor"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/teacher_btn_id"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/teacher_icon"
                android:background="@drawable/custom_button_5"
                android:text="Teacher"
                android:textAllCaps="false"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/builder_btn_id"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/custom_button_5"
                android:drawableLeft="@drawable/builder_icon"
                android:padding="10dp"
                android:text="Builder"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lawyer_btn_id"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/lawyer_icon"
                android:background="@drawable/custom_button_5"
                android:text="Lawyer"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/home_page_warning_layout_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0800"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activation_warning"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/homepage_viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>