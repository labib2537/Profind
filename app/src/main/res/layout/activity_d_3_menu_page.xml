<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEFCF9"
    android:scrollbars="none"
    tools:context=".d_3_Menu_page">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/navigation_bar_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_back_btn_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="-42dp"
                        android:background="@drawable/custom_button_1_2" />
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/back_arraw" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingEnd="15dp"
                        android:text="Menu"
                        android:textColor="#027C64"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="end"></LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/menu_page_warning_layout_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0800"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activation_warning"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_button_7"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/menu_page_profile_image_btn_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/profile_img"
                        app:civ_border_color="#E6E6E6"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/menu_page_profile_name_btn_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="#027C64"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Profile"
                        android:textColor="#9FABA9"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menu_page_profile_btn_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="-60dp"
                android:background="@drawable/custom_button_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_appointment_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button_6"
                        android:drawableLeft="@drawable/ic_appointment_icon"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:text="Appointment"
                        android:textAllCaps="false"
                        android:textColor="#027C64" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="end">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_setting_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button_6"
                        android:drawableLeft="@drawable/setting"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:text="Settings"
                        android:textAllCaps="false"
                        android:textColor="#027C64" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_complain_box_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button_6"
                        android:drawableLeft="@drawable/complain_box"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:text="Complain box"
                        android:textAllCaps="false"
                        android:textColor="#027C64" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="end">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_invite_frnd_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button_6"
                        android:drawableLeft="@drawable/invite_friends"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:text="Invite friends"
                        android:textAllCaps="false"
                        android:textColor="#027C64" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menu_page_need_help_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/custom_button_6"
                        android:drawableLeft="@drawable/help"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:text="Need help"
                        android:textAllCaps="false"
                        android:textColor="#027C64" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="end">

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center|bottom"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/menu_page_logout_btn_id"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_button_2"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="#027C64"
                    android:textSize="20sp" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>